amends "package://github.com/jdx/hk/releases/download/v0.4.1/hk@0.4.1#/Config.pkl"

min_hk_version = "0.4.1"

linters {
    ["check-schema"] {
        glob = new { "Cargo.*"; "*.rs" }
        fix = "cargo run --bin schlep-schema 2>/dev/null > schema.json"
    }
}

hooks {
    ["pre-commit"] = new { ["fix"] = new Fix {} }
}
